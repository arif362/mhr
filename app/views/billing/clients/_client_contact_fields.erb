<div class="client_contact" style="width: 207%">
  <div class="fields">

    <div class="col-lg-12">
      <div class="row">

        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <%= f.text_field :email, class: 'form-control reset-border-radius' %>
          </div>

          <div class="form-group">
            <%= f.label :home_phone, 'Home phone' %>
            <%= f.text_field :home_phone, class: 'form-control reset-border-radius' %>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="field_row description">
            <div class="form-group">
              <div class="row clearfix">
                <div class="col-sm-12">
                  <div class="row">
                    <div class="col-sm-6">
                      <%= f.label :first_name, 'First name' %>
                      <%= f.text_field :first_name, class: 'form-control reset-border-radius' %>
                    </div>
                    <div class="col-sm-6">
                      <%= f.label :last_name, 'Last name' %>
                      <%= f.text_field :last_name, class: 'form-control reset-border-radius' %>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="form-group">
              <%= f.label :mobile_number, 'Mobile' %>
              <%= f.text_field :mobile_number, class: 'form-control reset-border-radius' %>
            </div>
          </div>
        </div>
      </div>
    </div>





    <div class="options_row">
      <div class="options_content">
        <div class="options_content_row">
          <%= f.link_to_remove t("views.clients.remove_this_contact"), :class => 'remove btn btn-default reset-border-radius pul-right mr15 mb20', style:'margin-left:505px' %>
        </div>
      </div>
    </div>

  </div>
</div>