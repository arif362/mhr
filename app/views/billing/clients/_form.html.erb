<div class="row reset-padding">
  <div class="content-wrapper">
    <div class="header-wrapper">
      <h4>
        Billing New Clients
      </h4>
    </div>
    <div class="secondary-color">
      <div class="content-body-wrapper">
        <div class="row content-body">
          <%= nested_form_for @client, :html => {:id => 'newClient client_form'} do |f| %>
              <% @parent_f = f %>
              <h2 class="mt5"><%= t('views.clients.organization') %></h2>

              <div class="col-lg-12">
                <div class="row">
                  <div class="form-group col-sm-8">
                    <%= f.label :organization_name %>
                    <%= f.text_field :organization_name, required: true, class: 'form-control reset-border-radius' %>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <%= f.label :email %>
                      <%= f.text_field :email, required: true, class: 'form-control reset-border-radius' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :business_phone %>
                      <%= f.text_field :business_phone, class: 'form-control reset-border-radius' %>
                    </div>

                    <div class="form-group">
                      <div class="fields_content_container">
                        <div id="contact" class="fields_content_heading">
                          <h2 style="font-size: 25px;">
                            <i class="fa fa-plus-circle" id="plus-sign" aria-hidden="true" style="color:#449D44;"></i>
                            <i class="fa fa-minus-circle" id="minus-sign" aria-hidden="true" style="color:#449D44; display:none;"></i>
                            <%= t('views.clients.additional_contacts') %>
                          </h2>
                        </div>
                        <div id="adCntcts" class="fields_content_data" style="display:none;">
                          <div class="client_contacts_container">
                            <%= f.fields_for :client_contacts, :wrapper => false %>
                          </div>
                          <!--client_contacts_container-->
                          <div class="options_row">
                            <div class="options_content">
                              <div class="options_content_row">
                                <%= f.link_to_add t("views.clients.add_new_contact"), :client_contacts, :class => 'add btn btn-default pull-right mr150 reset-border-radius mb20', style:'position: absolute;bottom: 28px;left: 820px;' %>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!--fields_content_data-->
                      </div>
                      <!--fields_content_container-->
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="field_row description">
                      <div class="form-group">
                        <div class="row clearfix">
                          <div class="col-sm-12">
                            <div class="row">
                              <div class="col-sm-6">
                                <%= f.label :first_name %>
                                <%= f.text_field :first_name, required: true, class: 'form-control reset-border-radius' %>
                              </div>
                              <div class="col-sm-6">
                                <%= f.label :last_name %>
                                <%= f.text_field :last_name, required: true, class: 'form-control reset-border-radius' %>
                              </div>
                            </div>
                          </div>
                        </div>

                      </div>
                      <div class="form-group">
                        <%= f.label :mobile_number %>
                        <%= f.text_field :mobile_number, class: 'form-control reset-border-radius' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="fields_content_container">
                  <div id="detail" class="fields_content_heading">
                    <h2 class="ml13" style="font-size: 25px">
                      <i class="fa fa-plus-circle" id="detail-plus-sign" aria-hidden="true" style="color:#449D44;"></i>
                      <i class="fa fa-minus-circle" id="detail-minus-sign" aria-hidden="true" style="color:#449D44; display:none;"></i>
                      <%= t('views.common.details') %>
                    </h2>
                  </div>

                  <div id="add_Detail" class="fields_content_data" style="display:none;">

                    <div class="field_row col-md-6">

                      <div class="form-group ">
                        <%= f.label :country, 'Country' %>
                        <%= f.country_select :country ,{prompt:'Select country'}, class:'form-control reset-border-radius' %>
                      </div>

                      <div class="form-group">
                        <%= f.label :address_street1, 'Street#1' %>
                        <%= f.text_field :address_street1, class: 'form-control reset-border-radius' %>
                      </div>

                      <div class="form-group">
                        <%= f.label :address_street2, 'Street#2' %>
                        <%= f.text_field :address_street2, class: 'form-control reset-border-radius' %>
                      </div>
                    </div>
                    <!--field_row-->

                    <div class="field_row description">
                      <div class="form-group col-md-6">
                        <%= f.label :city, 'City' %>
                        <%= f.text_field :city, class: 'form-control reset-border-radius' %>
                      </div>

                      <div class="form-group col-md-6">
                        <%= f.label :province_state, 'province/State' %>
                        <%= f.text_field :province_state, class: 'form-control reset-border-radius' %>
                      </div>

                      <div class="form-group col-md-6">
                        <%= f.label :postal_zip_code, 'Postal/Zip code' %>
                        <%= f.text_field :postal_zip_code, class: 'form-control reset-border-radius' %>
                      </div>
                    </div>


                    <!--field_row-->

                    <div class="form-group col-md-6">
                      <%= f.label :industry %>
                      <%= f.select :industry, options_for_select(Billing::Client::INDUSTRY_LIST.map { |k, v| [v, v] }, f.object.industry), {prompt:'Select industry type'}, {class: "form-control reset-border-radius"} %>
                    </div>

                    <div class="form-group col-md-6">
                      <%= f.label :company_size %>
                      <%= f.select :company_size, options_for_select(Billing::Client::COMPANY_SIZE), {prompt:'Select company size'}, {class: "form-control reset-border-radius"} %>
                    </div>

                    <div class="form-group col-md-6">
                      <%= f.label :fax, 'Fax' %>
                      <%= f.text_field :fax, class: 'form-control reset-border-radius' %>
                    </div>

                    <!--field_row-->

                    <div class="field_row description">
                      <div class="form-group col-md-6">
                        <%= f.label :internal_notes, 'Internal notes' %>
                        <%= f.text_area :internal_notes, class: 'form-control reset-border-radius' %>
                      </div>
                    </div>
                    <!--field_row-->

                  </div>
                  <!--fields_content_data-->
                </div>
                <!--fields_content_container-->
              </div>
              <!--fields_content-->
              <script>$(".fields_content").last().css('border-bottom', 'none');</script>
              <script>$(".fields_content").last().css('padding-bottom', '0px');</script>

              <!--content_middle-->

              <div class="content_bottom form-group pull-right mr15">
                <%= f.submit :class => "btn btn-default reset-border-radius" %>
              </div>
              <!--content_bottom-->
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
      $('#plus-sign').click(function () {
         $('#plus-sign').hide();
         $('#minus-sign').show();
      });

      $('#minus-sign').click(function () {
          $('#minus-sign').hide();
          $('#plus-sign').show();
      });

      $('#detail-plus-sign').click(function () {
          $('#detail-plus-sign').hide();
          $('#detail-minus-sign').show();
      });

      $('#detail-minus-sign').click(function () {
          $('#detail-minus-sign').hide();
          $('#detail-plus-sign').show();
      });

  });

  $(function(){
      $('#client_form').syftValidator();
  })

</script>