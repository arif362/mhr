<% if @leave_application.errors.any? %>
    popupMessage('Unable to delete leave application, Please try again!', 'alert-danger');
<% else %>
    popupMessage('Leave application successfully deleted', 'alert-info');
    $("#leave-application-<%= @leave_application.id %>").remove();
    $('#global-modal').modal('hide');
    if ($(".done-application-list").find("tbody").find("tr").size() <= 0) {
        $('.no-data-found').html("<%= escape_javascript(render 'shared/no_data_found', message: 'No leave application').html_safe %>")
    }
<% end %>