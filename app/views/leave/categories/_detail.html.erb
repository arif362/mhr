<div class="modal-header" xmlns="http://www.w3.org/1999/html">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title">Leave Category Detail</h4>
</div>

<div class="modal-body">
  <div>
    <table class="table table-user-information">
      <tbody>
      <tr>
        <td> <%= label_tag 'Title' %> </td>
        <td> <%= @leave_category.name %> </td>
      </tr>

      <tr>
        <td> <%= label_tag 'Description' %> </td>
        <td> <%= @leave_category.description %> </td>
      </tr>

      <tr>
        <td> <%= label_tag 'Status' %> </td>
        <td>
          <div class="label label-<%= @leave_category.is_active ? 'success' : 'default' %>">
            <%= @leave_category.is_active ? 'Active' : 'Deactivated' %>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="modal-footer">
  <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
</div>