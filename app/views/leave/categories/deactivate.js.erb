<% if @leave_category.errors.any? %>
    popupMessage('<%= escape_javascript( errors_to_message_string( @leave_category.errors) ).html_safe %>', 'alert-danger');
<% else %>
    popupMessage('Leave category successfully deactivated.', 'alert-info');
    $("#leave-category-<%= @leave_category.id %>").replaceWith("<%= escape_javascript(render 'leave/categories/item', leave_category: @leave_category).html_safe %>");
    $('#global-modal').modal('hide');
<% end %>