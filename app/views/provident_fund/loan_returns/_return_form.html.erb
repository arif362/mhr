<%= form_for(@provident_fund_loan_return) do |f| %>
    <div class="form-group">
      <%= f.label 'Loans' %>
      <%= f.select :loan_id, @loans.collect { |loan| ["Taken: #{format_date(loan.date).to_s}, Amount:  #{loan.amount.to_s} Returned: #{loan.returned.to_s}, Due: #{(loan.amount - loan.returned).to_s}", loan.id] }, {prompt: 'Select Advance'}, {class: 'custom-chosen form-control custom-label-select', id: 'employees-advance-return-advance', required: true} %>
    </div>

    <div class="col-md-6 reset-padding">
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.number_field :amount, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-md-6 reset-padding pl15">
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :date, class: "form-control", required: true %>
      </div>
    </div>
    <div class="actions clearfix">
      <%= f.submit class: 'btn btn-default pull-right' %>
    </div>
<% end %>

<script type="text/javascript">
    $(function () {
        $('#provident_fund_loan_return_date').datetimepicker({
            format: 'YYYY-MM-DD',
            defaultDate: "<%= Date.today %>"
        });
    });
</script>