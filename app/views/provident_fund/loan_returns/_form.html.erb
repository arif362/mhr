<div class="provident-fund-loan-form clearfix">
  <div class="clearfix employee-contribution success-color">

  </div>
  <div class="row clearfix">
    <div class="col-lg-12 clearfix">
      <div class="row clearfix">
        <div class="form-group">
          <%= label_tag :employee, 'Select Employee' %>
          <%= select_tag :pf_employee, options_for_select(current_department.provident_fund_accounts.collect { |pf| [pf.employee.full_name, pf.id] }), {prompt: 'Select PF Account', class: 'form-control custom-chosen', required: true} %>
        </div>
        <div id="load-return-form-wrapper">

        </div>
      </div>
    </div>
  </div>
  <div class="form-loan-history">
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#pf_employee").change(function () {
            var pf_account_id = $(this).val();
            $.ajax({
                type: 'get',
                url: "<%= return_form_provident_fund_loan_returns_path %>",
                data: {pf_account_id: pf_account_id},
                error: function () {
                    popupMessage('Something wrong please try again!', 'error');
                }
            })
        });
    });
</script>