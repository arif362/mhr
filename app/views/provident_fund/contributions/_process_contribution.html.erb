<div class="new-modal-wrap modal fade bs-example-modal-lg" id="process-contribution-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content modal-body">
      <%= form_tag process_contribution_provident_fund_contributions_path, method: :get do %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <i class="fa fa-newspaper-o"></i>
            <h4 class="modal-title">Process employee contribution</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= label_tag :month, 'Contribution Month' %>
              <%= select_tag :month, options_for_select((1..12).collect { |m| [Date::MONTHNAMES[m], m] }, params[:month]), class: 'form-control mr10' %>
            </div>
            <div class="form-group">
              <%= label_tag :month, 'Contribution Year' %>
              <%= select_tag :year, options_for_select((current_department.year..Time.now.year), params[:year]), class: 'form-control mr10' %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= submit_tag 'Process Contribution', class: 'btn btn-info' %>
          </div>
      <% end %>
    </div>
  </div>
</div>