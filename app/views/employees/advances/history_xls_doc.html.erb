<div class="pf-statement-body-wrap">
  <div class="pf-statement-body-container pt40">
    <div class="employee-pf-statement-title">
      <p>
        <label class="m0"> Advance History </label><br>
      </p>
    </div>
    <table class="custom-pf-table">
      <thead class="custom-pf-table-thead">
      <tr>
        <th> Date</th>
        <th> Employee</th>
        <th> Given</th>
        <th> Return</th>
        <th> Balance</th>
      </tr>
      </thead>

      <tbody class="custom-pf-table-tbody">
      <% @advance_report.each do |report| %>
          <tr>
            <td><%= format_date(report[:date]) %></td>
            <td>
              <%= report[:employee].full_name if report[:employee].present? %>
            </td>
            <td><%= report[:given] == '-' ? '' : report[:given] %></td>
            <td><%= report[:return] == '-' ? '' : report[:return] %></td>
            <td>
              <%= (@balance = calculate_balance(@balance, report[:given], report[:return])).abs %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>