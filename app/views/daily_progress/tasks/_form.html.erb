<%= form_for @task, remote: true do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <i class="fa fa-newspaper-o"></i>
      <h4 class="modal-title"> Add New Task </h4>
    </div>

    <div class="modal-body">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, rows: 3, class: 'form-control' %>
      </div>
      <%= hidden_field_tag :date, @date %>
    </div>

    <div class="modal-footer">
      <div class="check-task">
        <%= f.check_box :multi_tasks, class:'pull-left' %>
        <label class="pull-left pl5 pt1">Add Multiple Tasks</label>
      </div>
      <%= f.submit @task.new_record?? 'Save' : 'Update', class: 'btn btn-primary' %>
      <%= f.submit 'Save And Continue', class: "btn btn-primary #{'hidden' unless @task.new_record?}" %>
      <!--<div class="btn btn-default" data-dismiss='modal'>Cancel</div>-->
    </div>
<% end %>