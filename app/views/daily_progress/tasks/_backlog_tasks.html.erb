
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> Add Task From Backlog </h4>
</div>

<%= form_tag add_from_backlog_daily_progress_tasks_path(date: @date), method: :get do %>
<div class="modal-body">
  <div class="task-lists-wrapper">
    <% unless @backlog_tasks.blank? %>
        <ul class="task-lists-action task-lists">
          <% @backlog_tasks.each do |task| %>
              <li id="task-<%= task.id %>">
                <%= check_box_tag 'completed[]', task.id, task.is_complete %>
                <%= task.title %>
                <%= link_to "From #{task.date}", daily_progress_tasks_path(date: task.date) %>
              </li>
          <% end %>
        </ul>
    <% else %>
        <p class="bs-callout bs-callout-info mt5 mb5 clearfix">
          Backlog tasks not found.
        </p>
    <% end %>
  </div>
</div>

<div class="modal-footer">
  <%= submit_tag 'Import', class: 'btn btn-default reset-border-radius' %>
  <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
</div>
<% end %>

<script type="text/javascript">
    $("#checkAllBacklogTasks").change(function () {
        $("input:checkbox").prop('checked', $(this).prop("checked"));
    });
</script>