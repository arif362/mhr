<div class="modal-header" xmlns="http://www.w3.org/1999/html">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> Bonus Category </h4>
</div>

<div class="modal-body">
  <div>
    <table class="table table-user-information">
      <tbody>
      <tr>
        <td> <%= label_tag 'Name' %> </td>
        <td> <%= @bonus_category.name %> </td>
      </tr>

      <tr>
        <td> <%= label_tag 'Message' %> </td>
        <td> <%= @bonus_category.message %> </td>
      </tr>

      <tr>
        <td> <%= label_tag 'Payment Type' %> </td>
        <td> <%= @bonus_category.is_amount ? 'Amount' : 'Percentage' %> </td>
      </tr>

      <tr>
        <td> <%= label_tag @bonus_category.is_amount ? 'Amount' : 'Percentage' %> </td>
        <td>
          <%= @bonus_category.amount %>
          <% unless @bonus_category.is_amount %>
              %
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="modal-footer">
  <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
</div>