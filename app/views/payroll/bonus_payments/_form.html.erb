<%= form_for @bonus_payment, remote: true do |f|%>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <i class="fa fa-newspaper-o"></i>
      <h4 class="modal-title"> Edit Bonus Payment </h4>
    </div>
    <div class="modal-body">

      <div class="modal-body-wrap">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :reason %>
              <%= f.text_field :reason, class: 'form-control reset-border-radius' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :amount %>
              <%= f.text_field :amount, class: 'form-control reset-border-radius' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :date %>
              <%= f.text_field :date, class: 'form-control reset-border-radius', value: Date.today %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :payment_method %>
              <%= f.select :payment_method, [ 'Cash', 'Check', 'Bank', 'Online' ],{}, { class: "form-control reset-border-radius" } %>
            </div>
          </div>
        </div>

        <div class="col-md-12 reset-padding">
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control reset-border-radius', rows: '5' %>
          </div>
        </div>

        <% if params[:employee_id].present? %>
            <%= hidden_field_tag :employee_id, params[:employee_id] %>
        <% end %>

      </div>

    </div>

    <div class="modal-footer">
      <%= f.submit class: 'btn btn-primary' %>
      <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
    </div>

<% end %>

<script type="text/javascript">
    $(function(){
        $('#payroll_bonus_payment_date').datetimepicker({
            format: 'YYYY-MM-DD'
        });
    });
</script>