<div class="table-warapper">
  <div class="table-warapper-body">

    <div class="employee-pf-statement-title">
      <p>
        <label class="m0"> Payroll Bonus Payments </label><br>
      </p>
    </div>

    <table class="table beaccount-table tablesorter table-responsive table-hover table-striped bonus-payments-table">
      <thead>
      <tr>
        <% unless params[:employee_id].present? %>
            <th>Employee</th>
        <% end %>
        <th>Purpose</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Remark</th>
      </tr>
      </thead>
      <tbody id="bonus-list">
      <% @bonuses.each do |bonus| %>
          <tr id="bonus-<%= bonus.id %>">
            <% unless params[:employee_id].present? %>
                <td>
                  <% if bonus.employee.present? %>
                      <%= link_to employee_profile_path(bonus.employee), remote:true do%>
                          <%= bonus.employee.full_name %>
                      <% end %>
                  <% end %>
                </td>
            <% end %>
            <td><%= truncate(bonus.reason, length: 50) %></td>
            <td><%= bonus.amount %></td>
            <td><%= format_date bonus.date %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="no-data-found">
      <% unless @bonuses.present? %>
          <%= render 'shared/no_data_found', message: 'No bonus found' %>
      <% end %>
    </div>
  </div>
</div>
