<%= form_for @bonus_payment, remote: true  do |f|%>
    <% unless f.object.new_record? %>
        <div class="form-group">
            <%= f.label 'Purpose' %>
            <%= f.object.reason  %>
        </div>
        <div class="form-group">
            <%= f.label 'Issued For' %>
            <h4><%= f.object.employee.full_name %></h4>
        </div>
    <% else %>
        <%= f.hidden_field :employee_id %>
        <%= f.hidden_field :department_id %>
        <%= f.hidden_field :reason %>
    <% end %>
    <div class="form-group">
        <%= f.label :message %>
        <%= f.text_area :message, class: 'form-control reset-border-radius' %>
    </div>
    <div class="form-group">
        <%= f.label :amount %>
      <%= f.text_field :amount, class: 'form-control reset-border-radius' %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, class: 'form-control reset-border-radius', value: Date.today %>
    </div>
    <div class="form-group">
        <%= f.label :payment_method %>
        <%= f.select :payment_method, [ 'Cash', 'Check', 'Bank', 'Online' ],{}, { class: "form-control reset-border-radius" } %>
    </div>
    <%= hidden_field_tag :checking_year, params[:checking_year] %>
    <div class="form-group text-center">
      <%= f.submit 'Save Bonus', class: 'btn btn-success reset-border-radius' %>
    </div>
<% end %>

<script type="text/javascript">
  $(function() {
      $('#payroll_bonus_payment_date').datetimepicker({
          format: 'YYYY-MM-DD'
      });
  });
</script>