<% if @departments.present? %>
$('#salary_bulk_department_select').html('<%= escape_javascript(render 'bulk_departments').html_safe %>');
if (!$('#process-salary-btn').length) {
    $('#process-salary-btn-container').html('<%= submit_tag 'Process Salary', class: 'btn btn-info', id: 'process-salary-btn' %>');
}
<% else %>
$('#salary_bulk_department_select').html('<%= escape_javascript(render 'shared/no_data_found', message: 'No due department in this month').html_safe %>');
$('#process-salary-btn').remove();
<% end %>