<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> <%= @salary.employee.full_name + '\'s salary ' + AppSettings::MONTHS_SHORT_NAME[@salary.month - 1] + ', ' + @salary.year.to_s %> </h4>
</div>

<div class="modal-body">
  <div class="">
    <%= render 'salary_detail' %>
  </div>
</div>

<div class="modal-footer">
  <div class="btn btn-default" data-dismiss='modal'>Cancel</div>

    <%= link_to payroll_salary_payslip_path(@salary), class: 'btn btn-primary' do %>
        Payslip
    <% end %>

</div>
