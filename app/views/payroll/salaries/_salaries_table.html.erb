<div class="table-warapper">
  <div class="table-warapper-body">
    <table class="table action-table beaccount-table tablesorter table-responsive salaries-list table-hover table-striped">
      <thead>
      <tr>
        <% unless params[:tag].present? %>
            <th>Employee</th>
        <% end %>
        <th>Payment Method</th>
        <th>Amount</th>
        <th>Month</th>
        <th>Year</th>
        <th>Issue Date</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="increments-list">
      <% salaries.each do |salary| %>
          <%= render 'payroll/salaries/salary_row', salary: salary %>
      <% end %>
      </tbody>
    </table>
    <div id="pager">
      <%= render 'shared/pagination' if salaries.size > 10 %>
    </div>
    <div class="no-data-found">
      <% unless salaries.present? %>
          <%= render 'shared/no_data_found', message: 'No salary found' %>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function(){
        if ($(".salaries-list").find("tbody").find("tr").size() > 0) {
            $(".salaries-list")
                    .tablesorter({
                        headers: {
                            6: {
                                sorter: false
                            }
                        },
                        widthFixed: true,
                        widgets: ['zebra']
                    })
                    .tablesorterPager({container: $("#pager")});
        }
    });
</script>
