<div class="table-warapper">
  <div class="table-warapper-body">
    <table class="table tablesorter action-table beaccount-table table-responsive table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        <th>Calculation Type</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="payroll-categories">
      <% @categories.each do |category| %>
          <%= render 'payroll/categories/category_table_row', category: category %>
      <% end %>
      </tbody>
    </table>
    <div class="no-category-found">
      <% unless @categories.present? %>
          <%= render 'shared/no_data_found', message: 'No category found' %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    if ($(".beaccount-table").find("tbody").find("tr").size() > 0) {
        $(".beaccount-table").tablesorter({
            headers: {
                4: {
                    sorter: false
                }
            },
            widthFixed: true,
            widgets: ['zebra']
        }).tablesorterPager({container: $("#pager")});
    }
</script>