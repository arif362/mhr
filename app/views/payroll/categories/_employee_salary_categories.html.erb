<div class="">
  <div class="table-warapper-body">
    <table class="table tablesorter action-table beaccount-table table-responsive table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Operational Type</th>
        <th>Amount Type</th>
        <th>Amount</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="payroll-employee-categories">
      <% @employee.payroll_employee_categories.each do |employee_category| %>
          <%= render 'payroll/categories/taken_employee_category_table_row', employee_category: employee_category %>
      <% end %>
      <% salary_categories(@employee).each do |employee_category| %>
          <%= render 'payroll/categories/not_taken_employee_category_table_row', employee_category: employee_category %>
      <% end %>
      </tbody>
    </table>
    <div id="pager"></div>
    <div class="no-data-found"></div>
  </div>
</div>

<script type="text/javascript">
    $(function(){
        <% if ((@employee.payroll_employee_categories.size + salary_categories(@employee).size) > 0) %>
            $('#no-data-found').remove();
        <% else %>
            $('#no-data-found').remove();
            $('.no-data-found').html("<%= escape_javascript(render 'shared/no_data_found', message: 'No payroll category').html_safe %>");
        <% end %>
    });
</script>