<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> Edit expense Budget</h4>
</div>

<%= form_for @budget, html: {id: 'budget_update_form'} do |f| %>
    <div class="modal-body">
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: 'form-control', data: {required: true} %>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.submit class: 'btn btn-primary invite-submit' %>
      <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
    </div>
<% end %>

<script>
    $(function () {
        $('#budget_update_form').syftValidator();
    });
</script>