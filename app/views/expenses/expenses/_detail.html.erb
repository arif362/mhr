<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> Expense Detail </h4>
</div>
<div class="modal-body">
  <div class="modal-body">
    <table class="table table-striped table-user-information">
      <tbody>
      <tr>
        <td> <%= label_tag 'Category' %> </td>
        <td> <%= @expense.expense_category.name if @expense.expense_category.present? %> </td>
      </tr>

      <tr>
        <td> <%= label_tag 'Sub Category' %> </td>
        <td> <%= @expense.expense_sub_category.name if @expense.expense_sub_category.present? %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Date' %> </td>
        <td> <%= format_date(@expense.date) %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Amount' %> </td>
        <td> <%= @expense.amount %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Description' %> </td>
        <td class="expense-view-description-for-readmore"> <%= @expense.description %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Created By' %> </td>
        <td> <%= @expense.created_by.full_name if @expense.created_by.present? %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Received By' %> </td>
        <td> <%= @expense.received_by %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Status' %> </td>
        <td> <%= @expense.status.capitalize %> </td>
      </tr>
      <tr>
        <td> <%= label_tag 'Approved / Rejected By' %> </td>
        <td> <%= @expense.approved_by.full_name if @expense.approved_by.present? %> </td>
      </tr>

      </tbody>
    </table>


  </div>
</div>
<div class="modal-footer">
  <div class="pull-right">
    <div class="btn btn-default reset-border-radius" data-dismiss='modal'>Cancel</div>
  </div>
</div>

