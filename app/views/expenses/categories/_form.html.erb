<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title">
    <% if expense_category_id.present? %>
        <%= @expense_category.new_record? ? 'Create new expense subcategory' : 'Edit expense subcategory' %>
    <% else %>
        <%= @expense_category.new_record? ? 'Create new expense category' : 'Edit expense category' %>
    <% end %>

  </h4>
</div>
<%= form_for @expense_category, html: {id: 'expense_category_form'}, remote: true do |f| %>
    <div class="modal-body">
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control', data: {required: true} %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: '5' %>
      </div>
    </div>

    <% if expense_category_id.present? %>
        <%= f.hidden_field :expense_category_id, :value => params[:expense_category_id] %>
    <% end %>

    <div class="modal-footer">
      <div class="pull-right">
        <%= f.submit class: 'btn btn-primary invite-submit' %>
        <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
      </div>
    </div>
<% end %>
<script>
    $('#expense_category_form').syftValidator();
</script>