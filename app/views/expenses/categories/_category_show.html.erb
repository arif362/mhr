<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title"> Expense Category Detail </h4>
</div>
  <div class="modal-body">

    <div class="row expense-detail">
      <div class="col-md-3">
        <%= label_tag 'Category Name' %>
      </div>
      <div class="col-md-1 reset-padding">
        <%= label_tag ':' %>
      </div>
      <div class="col-md-8">
        <%= @expense_category.name if @expense_category.present? %>
      </div>
    </div>

    <div class="row expense-detail">
      <div class="col-md-3">
        <%= label_tag 'Description' %>
      </div>
      <div class="col-md-1 reset-padding">
        <%= label_tag ':' %>
      </div>
      <div class="col-md-8 text-left">
        <%= @expense_category.description if @expense_category.present? %>
      </div>
    </div>


  </div>

<div class="modal-footer">
  <div class="pull-right">
    <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
  </div>
</div>
